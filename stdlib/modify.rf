(def modify member structure
	(if (+ (!= (len &member) 1)
	       (!= (type &member) token)
	    )
		(raise "modify: invalid arguments")
	)
	(if (len (search &member &structure))
		(for x &structure
			(if (== (type &x) token)
				(if (* (== &x &member)
				       (len &args)
				    )
					(get x args)
				else
					(get x)
					(struct &x &structure)
				)
			)
		)
	else
		(ret &structure &member &args)
	)
)
